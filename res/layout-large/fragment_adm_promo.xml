<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.estrelladelsur.fragments.fragmentresultado" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:orientation="vertical" >

            <Spinner
                android:id="@+id/spinnerEmpresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:spinnerMode="dialog" />

            <EditText
                android:id="@+id/editTextTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Ingrese un Titulo"
                android:textSize="50dp" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/editTextDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Ingrese una DescripciÃ³n"
                android:textSize="40dp" >
            </EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="60dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/buttonDesde"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                   android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    android:text="Desde"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/buttonHasta"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="150dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:layout_marginLeft="30dp"
                    android:text="Hasta"
                    android:textSize="25dp" />

                <RadioButton
                    android:id="@+id/radioButtonStock"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                     android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                     android:layout_marginRight="30dp"
                    android:text="Agotar Stock"
                    android:textSize="25dp" />
            </LinearLayout>

            <Button
                android:id="@+id/buttonGuardar"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:background="@drawable/button_estilo_group"
                android:gravity="center"
                android:text="Guardar"
                android:textColor="#ffffff"
                android:textSize="25dp" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>