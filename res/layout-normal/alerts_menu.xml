<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
      android:background="@drawable/body_alert"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relative2"
        android:background="@drawable/title_alert"
        android:layout_width="match_parent"
        android:layout_height="50dp">
      
        <TextView
            android:id="@+id/alertGenericoTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Titulo" />
    </RelativeLayout>

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >
    <TextView
            android:id="@+id/alertGenericoTxtMensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:paddingLeft="30dp"
			android:paddingRight="30dp"
			android:paddingTop="10dp"
			android:paddingBottom="10dp"
			android:textColor="#000000"
			android:text="texto prueba la venta fue realizada correctamente"
            android:textSize="20dp" />

    
   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <Button
            android:id="@+id/alerGenericoBtnAceptar"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/button_estilo_group"
            android:text="CREAR"
            android:textColor="#000000"
            android:textSize="15dp" />

        <Button
            android:id="@+id/alerGenericoBtnCancelar"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@drawable/button_estilo_group"
            android:text="EDITAR"
            android:textColor="#000000"
            android:textSize="15dp" />
    </LinearLayout>

</LinearLayout>